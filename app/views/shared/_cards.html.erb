<div class="container page-wrapper">
  <div class="page-inner">
    <div class="row">
      <% @items.each do |item| %>
      <div class="el-wrapper col-xs-6 col-sm-6 col-md-6 col-lg-3">
        <div class="box-up" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(''); height: 270px;">
          <!-- <img class="img" src="http://code.slicecrowd.com/labs/4/images/t-shirt.png" alt=""> -->
          <div class="img-info">
            <div class="info-inner">
              <span class="p-name"><%= link_to item.name.capitalize, items_path(item) %></span>
              <span class="p-company"><%= item.brand %></span>
            </div>
            <div class="a-size">Available sizes : <span class="size">S , M , L , XL</span></div>
          </div>
        </div>
        <div class="box-down">
          <div class="h-bg">
            <div class="h-bg-inner"></div>
          </div>

          <a class="cart" href="#">
            <span class="price">$120</span>
            <span class="add-to-cart">
              <span class="txt">Add in cart</span>
            </span>
          </a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
